pipeline {
    // Lets Jenkins use Docker for us later.
    agent any

    // If anything fails, the whole Pipeline stops.
    stages {
        stage('Build & Test') {
            // Use golang.
            agent { docker { image 'k8sdemo-backend:latest' } }

            steps {
                // Create our project directory.
                 sh '/root/main.exe'
            }
        }
    }
}